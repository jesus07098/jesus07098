<%- include ('partials/_header'); %>   
        
       <div class="contaier">
           <div class="row">
         
            <!--FORMULARIO-->
            <div class="col-md-5 offset-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/edit/<%- task._id %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" value="<%- task.title %>" placeholder="Insert a Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" id="" cols="80" rows="10" class="form-control" placeholder="Insert a Description"><%- task.description%></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Update</button>
                        </form>
                    </div>
                </div>
            </div>
           </div>
       </div>
